{
	"name": "simple-todo-highlighter",
	"displayName": "Simple Todo Highlighter",
	"description": "Highlights TODO keyword and lists all todos in the side bar.",
	"version": "0.3.0",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"todo",
		"todo snippet",
		"todo highlight",
		"simple todo",
		"highlighter"
	],
	"license": "MIT",
	"publisher": "zerefdev",
	"icon": "src/media/icon.png",
	"homepage": "https://github.com/zerefdev/simple-todo-highlighter/blob/main/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/zerefdev/simple-todo-highlighter.git"
	},
	"bugs": {
		"url": "https://github.com/zerefdev/simple-todo-highlighter/issues",
		"email": "contact@zeref.dev"
	},
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Simple Todo Highlighter",
			"properties": {
				"simpleTodoHighlighter.textColor": {
					"type": "string",
					"default": "#f1f1f1",
					"description": "Controls the text color."
				},
				"simpleTodoHighlighter.stylingColor": {
					"type": "string",
					"default": "#e5aa25",
					"description": "Controls the styling color."
				},
				"simpleTodoHighlighter.stylingType": {
					"type": "string",
					"default": "background",
					"enum": [
						"background",
						"border"
					],
					"description": "Controls the highlight styling."
				},
				"simpleTodoHighlighter.rulerLane": {
					"type": "string",
					"default": "Center",
					"enum": [
						"Left",
						"Right",
						"Center",
						"Full"
					],
					"description": "The position in the overview ruler where the decoration should be rendered."
				},
				"simpleTodoHighlighter.enableRulerColor": {
					"type": "boolean",
					"default": true,
					"description": "Whether to enable decoration in the overview ruler."
				},
				"simpleTodoHighlighter.include": {
					"type": "array",
					"default": [
						"**/*.js",
						"**/*.ts",
						"**/*.jsx",
						"**/*.tsx",
						"**/*.html",
						"**/*.vue",
						"**/*.css",
						"**/*.scss",
						"**/*.sass",
						"**/*.less",
						"**/*.styl",
						"**/*.py",
						"**/*.php",
						"**/*.md"
					],
					"description": "Files/Folders to include."
				},
				"simpleTodoHighlighter.exclude": {
					"type": "array",
					"default": [
						"**/node_modules/**",
						"**/bower_components/**",
						"**/dist/**",
						"**/out/**",
						"**/build/**",
						"**/.*/**"
					],
					"description": "Files/Folders to exclude."
				}
			}
		},
		"commands": [
			{
				"command": "simpleTodoHighlighter.refreshList",
				"category": "Simple Todo Highlighter",
				"title": "Refresh Todo List",
				"icon": "$(refresh)"
			},
			{
				"command": "simpleTodoHighlighter.openFile",
				"category": "Simple Todo Highlighter",
				"title": "Open File",
				"icon": "$(file)"
			}
		],
		"snippets": [
			{
				"path": "src/todo.code-snippets"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "simpleTodoHighlighter",
					"title": "Simple Todo Highlighter",
					"icon": "src/media/icon.svg"
				}
			]
		},
		"views": {
			"simpleTodoHighlighter": [
				{
					"id": "todo-list",
					"name": "Todo List"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "simpleTodoHighlighter.refreshList",
					"when": "view == todo-list",
					"group": "navigation"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "todo-list",
				"contents": "You have no todos yet."
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"precompile": "rm -rf out",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
